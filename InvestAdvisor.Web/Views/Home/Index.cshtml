@if (newProjects.Count > 0)
{
    <div class="row page-titles">
        <div class="col-9 align-self-center">
            <h3 class="text-themecolor">Новые проекты</h3>
        </div>
        <div class="col-3">
            <a href="@Url.Action("Index", "Projects", new {orderDir = "Desc"})" class="btn btn-secondary btn-circle pull-right" data-toggle="tooltip" data-placement="left" title="" data-original-title="Все проекты">...</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var newProject in newProjects)
            {
                <div class="col-lg-6 col-xlg-4 col-md-6">
                    @Html.Partial("ProjectListItem", newProject)
                </div>
            }
        </div>
    </div>
