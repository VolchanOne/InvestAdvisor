@using InvestAdvisor.Model.Views.Enums
@model InvestAdvisor.Model.Views.BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>InvestAdvisor - независимый инвестиционный советник</title>

    <link href="~/Styles/bootstrap.min.css" rel="stylesheet">
    <link href="~/Styles/template.css" rel="stylesheet">
    <link href="~/Styles/blue.css" rel="stylesheet">
    <link href="~/Styles/site.css" rel="stylesheet">

    <style type="text/css">
        .jqstooltip {
            position: absolute;
            left: 0;
            top: 0;
            visibility: hidden;
            background: rgb(0, 0, 0);
            background-color: rgba(0,0,0,0.6);
            -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000)";
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#99000000', endColorstr='#99000000');
            color: white;
            font: 10px arial, san serif;
            text-align: left;
            white-space: nowrap;
            padding: 5px;
            border: 1px solid white;
            z-index: 10000;
        }

        .jqsfield {
            color: white;
            font: 10px arial, san serif;
            text-align: left;
        }
    </style>

    @*@Styles.Render("~/Content/css")*@
</head>
<body class="fix-header fix-sidebar logo-center card-no-border">
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <div id="main-wrapper">
        <header class="topbar">
            <nav class="navbar top-navbar navbar-expand-md navbar-light">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">
                        InvestAdvisor
                    </a>
                </div>
                <div class="navbar-collapse">
                    <ul class="navbar-nav mr-auto mt-md-0">
                        <li class="nav-item"> <a class="nav-link nav-toggler hidden-md-up text-muted waves-effect waves-dark" href="javascript:void(0)"><i class="mdi mdi-menu"></i></a> </li>
                        <li class="nav-item m-l-10"> <a class="nav-link sidebartoggler hidden-sm-down text-muted waves-effect waves-dark" href="javascript:void(0)"><i class="ti-menu"></i></a> </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <li @(Model.ActiveMenuItem == MenuItem.Home ? "class=active" : string.Empty)>
                            <a class="waves-effect waves-dark" href="@Url.Action("Index","Home")"><i class="mdi mdi-home"></i><span class="hide-menu">Главная</span></a>
                        </li>
                        <li class="nav-small-cap">ИНВЕСТИЦИИ</li>
                        <li @(Model.ActiveMenuItem == MenuItem.News ? "class=active" : string.Empty)>
                            <a class="waves-effect waves-dark" href="#"><i class="mdi mdi-book-open-variant"></i><span class="hide-menu">Новости</span></a>
                        </li>
                        <li @(Model.ActiveMenuItem == MenuItem.Portfolio ? "class=active" : string.Empty)>
                            <a class="has-arrow waves-effect waves-dark" href="#" aria-expanded="false"><i class="mdi mdi-briefcase-check"></i><span class="hide-menu">Портфель</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="app-calendar.html">Calendar</a></li>
                                <li><a href="app-chat.html">Chat app</a></li>
                                <li><a href="app-ticket.html">Support Ticket</a></li>
                                <li><a href="app-contact.html">Contact / Employee</a></li>
                                <li><a href="app-contact2.html">Contact Grid</a></li>
                                <li><a href="app-contact-detail.html">Contact Detail</a></li>
                            </ul>
                        </li>
                        <li @(Model.ActiveMenuItem == MenuItem.Projects ? "class=active" : string.Empty)>
                            <a class="has-arrow waves-effect waves-dark" href="@Url.Action("All","Projects")" aria-expanded="false"><i class="mdi mdi-folder-multiple-outline"></i><span class="hide-menu">Все проекты</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="@Url.Action("All","Projects")"  @(Model.ActiveSubMenuItem == MenuItem.ProjectsActive ? "class=active" : string.Empty)>Активные</a></li>
                                <li><a href="#" @(Model.ActiveSubMenuItem == MenuItem.ProjectsClosed ? "class=active" : string.Empty)>Закрытые</a></li>
                            </ul>
                        </li>
                        <li class="nav-small-cap">ДЕНЬГИ</li>
                        <li @(Model.ActiveMenuItem == MenuItem.PaySystem ? "class=active" : string.Empty)>
                            <a class="has-arrow waves-effect waves-dark" href="#" aria-expanded="false"><i class="fa fa-money"></i><span class="hide-menu">Платежные системы</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="form-basic.html">Basic Forms</a></li>
                                <li><a href="form-layout.html">Form Layouts</a></li>
                                <li><a href="form-addons.html">Form Addons</a></li>
                                <li><a href="form-material.html">Form Material</a></li>
                                <li><a href="form-float-input.html">Floating Lable</a></li>
                                <li><a href="form-pickers.html">Form Pickers</a></li>
                                <li><a href="form-upload.html">File Upload</a></li>
                                <li><a href="form-mask.html">Form Mask</a></li>
                                <li><a href="form-validation.html">Form Validation</a></li>
                                <li><a href="form-dropzone.html">File Dropzone</a></li>
                                <li><a href="form-icheck.html">Icheck control</a></li>
                                <li><a href="form-img-cropper.html">Image Cropper</a></li>
                                <li><a href="form-bootstrapwysihtml5.html">HTML5 Editor</a></li>
                                <li><a href="form-typehead.html">Form Typehead</a></li>
                                <li><a href="form-wizard.html">Form Wizard</a></li>
                                <li><a href="form-xeditable.html">Xeditable Editor</a></li>
                                <li><a href="form-summernote.html">Summernote Editor</a></li>
                                <li><a href="form-tinymce.html">Tinymce Editor</a></li>
                            </ul>
                        </li>
                        <li @(Model.ActiveMenuItem == MenuItem.CurrencyExchange ? "class=active" : string.Empty)>
                            <a class="has-arrow waves-effect waves-dark" href="#" aria-expanded="false"><i class="fa fa-exchange"></i><span class="hide-menu">Обмен валют</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="table-basic.html">Basic Tables</a></li>
                                <li><a href="table-layout.html">Table Layouts</a></li>
                                <li><a href="table-data-table.html">Data Tables</a></li>
                                <li><a href="table-footable.html">Footable</a></li>
                                <li><a href="table-jsgrid.html">Js Grid Table</a></li>
                                <li><a href="table-responsive.html">Responsive Table</a></li>
                                <li><a href="table-bootstrap.html">Bootstrap Tables</a></li>
                                <li><a href="table-editable-table.html">Editable Table</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="page-wrapper">
           
            
            @RenderBody()

            
            <footer class="footer">
                © 2017 Admin Press Admin by themedesigner.in
            </footer>
        </div>
     </div>
    




    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Scripts/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Scripts/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Scripts/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/Scripts/sticky-kit.min.js"></script>
    <script src="~/Scripts/jquery.sparkline.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Scripts/custom.min.js"></script>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/plugins");*@
    @RenderSection("scripts", required: false)
</body>
</html>
