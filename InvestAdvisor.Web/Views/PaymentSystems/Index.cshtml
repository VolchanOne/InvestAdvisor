@using InvestAdvisor.Model.ViewModels.Enums
@model InvestAdvisor.Model.ViewModels.PaymentSystemsViewModel

<div class="row page-titles">
    <div class="align-self-center">
        <h3 class="text-themecolor">Электронные платежные системы</h3>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        @foreach (var paymentSystem in Model.PaymentSystems)
        {
            <div class="col-lg-6 col-xlg-4 col-md-6">
                @Html.Partial("PaymentSystemListItem", paymentSystem)
            </div>
        }
    </div>
</div>

