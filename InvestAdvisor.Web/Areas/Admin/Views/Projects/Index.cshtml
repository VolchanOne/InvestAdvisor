@model IEnumerable<InvestAdvisor.Web.Areas.Admin.Models.ProjectViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h2>Projects</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Image)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => project.Name)
                            </td>
                            <td>
                                <img src="data:image;base64,@Convert.ToBase64String(project.Image.Content)" width="150" />
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = project.ProjectId }) |
                                @Html.ActionLink("Details", "Details", new { id = project.ProjectId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = project.ProjectId })
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
