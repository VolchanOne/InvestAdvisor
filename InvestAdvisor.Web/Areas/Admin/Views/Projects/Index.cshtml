@model IEnumerable<InvestAdvisor.Model.ProjectModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Проекты</h4>
        <p>
            @Html.ActionLink("Создать", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @{int i = 1;}
                @foreach (var project in Model)
                {
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.Name)
                        </td>
                        <td>

                            <button type="button" class="btn waves-effect waves-light btn-secondary">
                                @Html.ActionLink("Редактировать", "Edit", new {id = project.ProjectId})
                            </button> |
                            <button type="button" class="btn waves-effect waves-light btn-secondary">
                                @Html.ActionLink("Удалить", "Delete", new {id = project.ProjectId})
                            </button>
                        </td>
                    </tr>
                    i++;
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
