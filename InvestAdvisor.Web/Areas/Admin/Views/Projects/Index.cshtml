@model IEnumerable<InvestAdvisor.Web.Areas.Admin.Models.ProjectViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h2>Projects</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => project.Name)
                            </td>
                            <td>

                                <button type="button" class="btn waves-effect waves-light btn-secondary">
                                    @Html.ActionLink("Edit", "Edit", new { id = project.ProjectId })
                                </button> |
                                <button type="button" class="btn waves-effect waves-light btn-secondary">
                                    @Html.ActionLink("Details", "Details", new { id = project.ProjectId })
                                </button> |
                                <button type="button" class="btn waves-effect waves-light btn-secondary">
                                    @Html.ActionLink("Delete", "Delete", new { id = project.ProjectId })
                                </button>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
