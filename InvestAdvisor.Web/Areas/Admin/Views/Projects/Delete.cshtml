@model InvestAdvisor.Web.Areas.Admin.Models.ProjectViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3>@Model.Name</h3>
        <p>
            Are you sure you want to delete this project
        </p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div>
                    <input type="submit" value="Delete" class="btn btn-secondary" />
                </div>
            </div>
        }
        <div>
            <button type="button" class="btn waves-effect waves-light btn-secondary">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    </div>
</div>
