@using InvestAdvisor.Common.Enums
@model InvestAdvisor.Model.ProjectModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles
{
    <link href="~/Styles/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Styles/bootstrap-wysihtml5.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Редактирование проекта</h4>
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("Edit", "Projects", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ProjectId)

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Url)
                            @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Дополнительная информация</h4>
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("EditAdditional", "Projects", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ProjectId)
                        @Html.HiddenFor(model => model.Additional.ProjectAdditionalId)

                        <div class="form-group">
                            @Html.LabelFor(m => m.Additional.Marketing)
                            @Html.TextBoxFor(m => m.Additional.Marketing, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Additional.Referral)
                            @Html.TextBoxFor(m => m.Additional.Referral, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Additional.StartDate)
                            @Html.TextBoxFor(m => m.Additional.StartDate, new { @class = "form-control", @type = "date" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Обзор</h4>
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("EditReview", "Projects", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ProjectId)
                        @Html.HiddenFor(model => model.Review.ProjectReviewId)

                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Review.Review, new { @class = "textarea_editor form-control", @rows = 15 })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("AddImage", "Projects", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ProjectId)
                        <h4>Добавить изображение</h4>
                        <div class="form-group">
                            <div>
                                <input type="file" class="form-control" name="Image" aria-describedby="fileHelp">
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.DropDownList("ImageType",
                            EnumHelper.GetSelectList(typeof(ImageType)),
                            "Выберите тип",
                            new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (Model.Images != null && Model.Images.Count > 0)
    {
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Изображения проекта</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Изображение</th>
                                <th>Тип</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var image in Model.Images)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        <img src="data:image;base64,@Convert.ToBase64String(image.Content)" width="150" />
                                    </td>
                                    <td>
                                        @image.ImageType.ToString()
                                    </td>
                                    <td>
                                        <button type="button" class="btn waves-effect waves-light btn-secondary">
                                            @Html.ActionLink("Удалить", "DeleteImage", new { projectId = Model.ProjectId, imageId = image.ImageId })
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
                                }

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Редактирование тех информации</h4>
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("EditTechInfo", "Projects", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ProjectId)
                        @Html.HiddenFor(model => model.TechInfo.ProjectTechId)

                        <div class="form-group">
                            @Html.LabelFor(m => m.TechInfo.Domain)
                            @Html.TextBoxFor(m => m.TechInfo.Domain, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TechInfo.Hosting)
                            @Html.TextBoxFor(m => m.TechInfo.Hosting, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.TechInfo.Ssl)
                            @Html.TextBoxFor(m => m.TechInfo.Ssl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("EditActivity", "Projects", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ProjectId)
                        <h4>Параметры</h4>
                        <div class="form-group">
                            <input type="checkbox" name="InPortfolio" id="InPortfolio" class="chk-col-blue" onclick="checkboxClick()" @(Model.InPortofolio ? "checked= \"\"" : string.Empty)>
                            <label for="InPortfolio">В портфель</label>
                            <input name="InPortfolio" type="hidden" value="@Model.InPortofolio.ToString().ToLower()">
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="IsActive" id="IsActive" class="chk-col-blue" onclick="checkboxClick()" @(Model.IsActive ? "checked= \"\"" : string.Empty)>
                            <label for="IsActive">Активировать</label>
                            <input name="IsActive" type="hidden" value="@Model.IsActive.ToString().ToLower()">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <button type="button" class="btn waves-effect waves-light btn-secondary">
        @Html.ActionLink("Назад к списку", "Index")
    </button>

</div>

@section scripts {
    <script src="~/Scripts/wysihtml5-0.3.0.js"></script>
    <script src="~/Scripts/bootstrap-wysihtml5.js"></script>

    <script type="text/javascript">
        function checkboxClick() {
            var target = event.target || event.srcElement;
            if (target != null) {
                var value = target.checked;
                var inputs = $('input[name=' + target.name + ']');
                for (var i = 0; i < inputs.length; i++) {
                    inputs[i].value = value;
                }
            }
        }

        $(document).ready(function () {
            $('.textarea_editor').wysihtml5();
        });
    </script>
}
