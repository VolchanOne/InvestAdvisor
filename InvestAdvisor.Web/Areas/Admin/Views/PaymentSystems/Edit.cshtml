@using InvestAdvisor.Common.Enums
@model InvestAdvisor.Model.PaymentSystemModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Редактирование</h4>
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("Edit", "PaymentSystems", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.PaymentSystemId)

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ShortName)
                            @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Url)
                            @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("AddImage", "PaymentSystems", FormMethod.Post, new { @class = "form-material", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.PaymentSystemId)
                        <h4>Добавить изображение</h4>
                        <div class="form-group">
                            <div>
                                <input type="file" class="form-control" name="Image" aria-describedby="fileHelp">
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.DropDownList("ImageType",
                                           EnumHelper.GetSelectList(typeof(ImageType)),
                                           "Выберите тип",
                                           new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn waves-effect waves-light btn-outline-info">Сохранить</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (Model.Images != null && Model.Images.Count > 0)
    {
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Изображения платежной системы</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Изображение</th>
                                <th>Тип</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var image in Model.Images)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        <img src="data:image;base64,@Convert.ToBase64String(image.Content)" width="150" />
                                    </td>
                                    <td>
                                        @image.ImageType.ToString()
                                    </td>
                                    <td>
                                        <button type="button" class="btn waves-effect waves-light btn-secondary">
                                            @Html.ActionLink("Удалить", "DeleteImage", new { paymentSystemId = Model.PaymentSystemId, imageId = image.ImageId })
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <button type="button" class="btn waves-effect waves-light btn-secondary">
        @Html.ActionLink("Назад к списку", "Index")
    </button>

</div>


